<Window x:Class="TDNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDNote"
        mc:Ignorable="d"
        Title="{Binding TitreFenetre}" Height="450" Width="800">
    <ScrollViewer>
        <DockPanel>
            <local:PostListAlbumView DockPanel.Dock="Left" Width="250"/>
            <local:PostView DockPanel.Dock="Right" Width="500" />
        </DockPanel>
    </ScrollViewer>
</Window>
